.audio_wrap {
	width: 710px;
	margin-bottom:20px;
}
.audio_cont {
	position:relative;
	box-sizing: border-box;
	width: 100%;
	height: 74px;
	border-radius: 8px;
	border: 1px solid #ebebeb;
	background: #FFF;
	padding: 0 10px;
}
.audio_mess {
	height: 34px;
	line-height: 34px;
	margin-top: 18px;
}
.audio_icon {
	position: relative;
	float: left;
	width: 25px;
	height: 34px;
	margin: 0 26px 0 20px;
	cursor: pointer;
}
.audio_icon img {
	position: absolute;
	top: 2px;
	height: 30px;
	margin:0;
}
.audio_icon .audio_icon1 {
	left: 0;
}
.audio_icon .audio_icon2 {
	left: 6px;
}
.audio_icon .audio_icon3 {
	left: 11px;
}
.audio_icon .audio_icon4 {
	left: 16px;
}
.audio_icon.active .audio_icon2 {
	animation: iconAni2 1.6s infinite;
	-o-animation: iconAni2 1.6s infinite;
	-ms-animation: iconAni2 1.6s infinite;
	-moz-animation: iconAni2 1.6s infinite;
	-webkit-animation: iconAni2 1.6s infinite;
}
.audio_icon.active .audio_icon3 {
	animation: iconAni3 1.6s infinite;
	-o-animation: iconAni3 1.6s infinite;
	-ms-animation: iconAni3 1.6s infinite;
	-moz-animation: iconAni3 1.6s infinite;
	-webkit-animation: iconAni3 1.6s infinite;
}
.audio_icon.active .audio_icon4 {
	animation: iconAni4 1.6s infinite;
	-o-animation: iconAni4 1.6s infinite;
	-ms-animation: iconAni4 1.6s infinite;
	-moz-animation: iconAni4 1.6s infinite;
	-webkit-animation: iconAni4 1.6s infinite;
}
@keyframes iconAni2 {
	0% {
		opacity: 0;
	}
	25% {
		opacity: 0;
	}
	50% {
		opacity: 1;
	}
}
@-o-keyframes iconAni2 {
	0% {
		opacity: 0;
	}
	25% {
		opacity: 0;
	}
	50% {
		opacity: 1;
	}
}
@-ms-keyframes iconAni2 {
	0% {
		opacity: 0;
	}
	25% {
		opacity: 0;
	}
	50% {
		opacity: 1;
	}
}
@-moz-keyframes iconAni2 {
	0% {
		opacity: 0;
	}
	25% {
		opacity: 0;
	}
	50% {
		opacity: 1;
	}
}
@-webkit-keyframes iconAni2 {
	0% {
		opacity: 0;
	}
	25% {
		opacity: 0;
	}
	50% {
		opacity: 1;
	}
}
@keyframes iconAni3 {
	0% {
		opacity: 0;
	}
	50% {
		opacity: 0;
	}
	75% {
		opacity: 1;
	}
}
@-o-keyframes iconAni3 {
	0% {
		opacity: 0;
	}
	50% {
		opacity: 0;
	}
	75% {
		opacity: 1;
	}
}
@-ms-keyframes iconAni3 {
	0% {
		opacity: 0;
	}
