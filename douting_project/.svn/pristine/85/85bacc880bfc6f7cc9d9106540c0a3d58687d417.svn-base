.audio_mess p {
	float: left;
	font-size: 16px;
	color: #898989;
	margin: 0;
}
.audio_mess p.audio_time {
	margin: 0 18px 0 0;
}
.audio_mess p.audio_title {
	width: 40%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.audio_progress {
	clear: both;
	width: 100%;
	height: 3px;
	margin-top: 15px;
	border-radius: 8px;
	overflow: hidden;
}
.audio_promain {
	width: 0;
	height: 100%;
	background: #6ba6ed;
}
.audio_tip {
    display:none;
    font-size:14px;
    color:#F00;
    margin-top:10px;
}
.audio_mark {
	position:absolute;
	left:0;
	top:0;
	width:100%;
	height:100%;
	background:rgba(255,255,255,.5);
	border-radius:8px;
    cursor:pointer;
}

@media screen and (max-width:320px){
    .audio_mess p.audio_title {
        width:34%;
    }
}