.header_live_tx::-webkit-scrollbar {display:none}
.comment_cont_wrap::-webkit-scrollbar {display:none}
html,body{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
body{
    position: relative;
    -webkit-overflow-scrolling: touch;
}
#videobox{
    position: absolute;
    top:0;
    left:0;
    z-index:1;
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
    /* Other transform properties here */
}
#videobox video{
    width: 100%;
    height: 100%;
    object-fit: initial;
    background-color: #000;
}
.header_wrap{
    position: relative;
    z-index: 2;
}
.header_wrap .header{
    margin: auto;
    box-sizing: border-box;
    padding-top: 0.3rem;
    display: -webkit-box;
    display: box;
    display: -webkit-flex;
    display: flex;
}
.header_live_details{
    flex: 1;
    box-sizing: border-box;
    padding-left: 0.3rem;
}
.header_live_details_wrap{
    width: 2.3rem;
    height: 0.73rem;
    border-radius: 1rem;
    background:rgba(142,142,142,0.6936);
    color: #fff;
    text-align: left;
    box-sizing: border-box;
    padding-left: 0.35rem;
}
.header_live_details h4{
    font-size: 0.26rem;
}
.header_live_details p{
    font-size: 0.2rem;
}
.avatar-ls{
    flex:1;
    box-sizing: border-box;
    padding-right: 0.3rem;
}
.header_live_tx{
    width: 3.3rem;
    overflow-x: scroll;
    white-space: nowrap;
    box-sizing: border-box;
    padding-top: 0.16rem;
    font-size: 0;
}
.header_live_tx li+li{
    margin-left: 0.13rem;
}
.header_live_tx li{
    display: inline-block;
    font-size: 0.16rem;
    width: 0.54rem;
    height: 0.54rem;
    border-radius: 50%;
    color: #ffffff;
}
.header_live_tx li img{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.on_line_wrap{
    margin-top: 0.16rem;
    box-sizing: border-box;
    padding-right: 0.3rem;
}
.on_line{
    padding:0.07rem 0.17rem 0.02rem;
    height: 0.32rem;
    background-color: #535353;
    border-radius: 1rem;
    line-height: 0.32rem;
}
.on_line i{
    width: 0.23rem;
    height: 0.21rem;
    margin-top: 0.01rem;
    background: url("../img/love.svg")no-repeat center;
    background-size: 100% 100%;
}
.on_line span{
    font-size: 0.24rem;
    margin-left: 0.08rem;
    color: #ffffff;
}
.comment_wrap{
    width: 100%;
    position: absolute;
    bottom:0;
    z-index: 3;
}
.comment{
    width: 6.77rem;
    margin: auto;
}
.comment_cont_wrap{
    overflow-y: auto;
    max-height: 3.5rem;
}
.comment_cont{
    margin-left: 0.29rem;
    font-size: 0;
}
.comment_cont .system_news{
    color: #FDBA3C;
}
.comment_cont li{
    max-width: 4.7rem;
    margin-bottom: 0.18rem;
    padding: 0.1rem 0.15rem;
    background-color: #000;
    opacity: 0.6;
    border-radius: 0.36rem;
    display: table;
    color: #ffffff;
}
.comment_cont li span{
    line-height: 1.625;
    font-size: 0.28rem;
}
.footer_main{
    font-size: 0.38rem;
    color: #ffffff;
    box-sizing: border-box;
    padding-bottom: 0.4rem;
}
.common_package{
    padding-left: 0.46rem;
}
.common_package img,.share_close img{
    display: block;
    width: 100%;
}
.comment_btn{
    width: 0.38rem;
    box-sizing: border-box;
    padding-top: 0.2rem;
    margin-right: 0.47rem;
}
.package{
    width: 0.74rem;
}
.share_close{
    box-sizing: border-box;
    padding-right: 0.47rem;
}
.share{
    box-sizing: border-box;
    padding-top: 0.2rem;
    width: 0.35rem;
}
.close{
    box-sizing: border-box;
    padding-top: 0.23rem;
    width: 0.29rem;
    margin-left: 0.64rem;
}
.info_img{
	width:100%;
	height:100%;
	position:relative;
	z-index:6;
}
.info_img .info_img_main{
	display:block;
	width:100%;
	height:100%;
}
.play_btn{
    position: absolute;
    z-index: 4;
    left:50%;
    top:50%;
    width: 0.6rem;
    height: 0.6rem;
    margin-left: -0.3rem;
    margin-top: -0.3rem;
}
.play_btn img{
    display: block;
    width: 100%;
    height: 100%;
}